extends layout

append content
  article
    .inner.text_post.markdown
      | !{entry.content}
    .footerwrap
      footer
        .date #{entry.time}

  #disqus_thread
    script(type='text/javascript')
        /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
        var disqus_shortname = 'pct-test'; // required: replace example with your forum shortname
        //var disqus_identifier = '#{entry.url}';
        //var disqus_url = '#{site.siteUrl}#{entry.url}';
        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
      noscript
        | Please enable JavaScript to view the
        a(href='http://disqus.com/?ref_noscript') comments powered by Disqus.


append script
  script(src="/public/google-code-prettify/prettify.js")
  script
    (function() {
      var pres = document.getElementsByTagName('pre');
      for (var i=0,l=pres.length; i<l; i++) {
        pres[i].className = 'prettyprint';
      }
      prettyPrint();
    })();
